(defaction (translate ((source filter)
                            (target variable)
                            (result variable)))
  (to-list () `(translate (:source  ,(synth to-list source) :target ,(synth to-list target) :result ,(synth to-list result) :pre ,(synth to-list precond) :post ,(synth to-list postcond))))
  (to-html () (div nil 
		   (text "Sia ") 
		   (synth to-html result) 
		   (text " il risultato della compilazione del seguente sorgente:")
		   (div (list :class 'well) (synth to-req source))
                   (maybes (list precond (span nil (text "Precondizione:")))
                           (list postcond (span nil (text "Postcondizione:")))))))

(defun translate2 (source &key pre post)
  (let ((result (variab (gensym))))
    (values (translate source nil result :precond pre :postcond post) result)))
